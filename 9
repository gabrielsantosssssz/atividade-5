<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Operações Aritméticas</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        input[type="text"], input[type="number"] {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            box-sizing: border-box;
        }
        button {
            padding: 10px 20px;
            margin: 5px 0;
        }
        h1 {
            margin-top: 20px;
        }
    </style>
    <script>
        function calcularOperacao(operacao) {
            const num1 = parseFloat(document.getElementById("num1").value);
            const num2 = parseFloat(document.getElementById("num2").value);
            let resultado;

            switch (operacao) {
                case 'soma':
                    resultado = num1 + num2;
                    break;
                case 'subtracao':
                    resultado = num1 - num2;
                    break;
                case 'multiplicacao':
                    resultado = num1 * num2;
                    break;
                case 'divisao':
                    resultado = num2 !== 0 ? num1 / num2 : "Erro: Divisão por zero!";
                    break;
                default:
                    resultado = "Operação inválida";
            }

            document.getElementById("resultadoCalc").value = resultado;
        }
    </script>
</head>
<body>

    <h1>Operações Aritméticas</h1>
    <label for="num1">Número 1:</label>
    <input type="number" id="num1" placeholder="Digite o primeiro número">
    <label for="num2">Número 2:</label>
    <input type="number" id="num2" placeholder="Digite o segundo número">
    <button onclick="calcularOperacao('soma')">Somar</button>
    <button onclick="calcularOperacao('subtracao')">Subtrair</button>
    <button onclick="calcularOperacao('multiplicacao')">Multiplicar</button>
    <button onclick="calcularOperacao('divisao')">Dividir</button>
    <label for="resultadoCalc">Resultado:</label>
    <input type="text" id="resultadoCalc" readonly>

</body>
</html>
