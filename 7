<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cálculo de IMC</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: blue;
            font-size: 24pt;
        }
        .resultado {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Calculadora de IMC</h1>
    <form id="formIMC">
        <label for="altura">Altura (em metros):</label>
        <input type="number" id="altura" step="0.01" required><br><br>
        <label for="peso">Peso (em kg):</label>
        <input type="number" id="peso" step="0.1" required><br><br>
        <label for="sexo">Sexo:</label>
        <select id="sexo" required>
            <option value="M">Masculino</option>
            <option value="F">Feminino</option>
        </select><br><br>
        <button type="button" onclick="calcularIMC()">Calcular IMC</button>
    </form>

    <div class="resultado" id="resultado"></div>

    <script>
        function calcularIMC() {
            const altura = parseFloat(document.getElementById('altura').value);
            const peso = parseFloat(document.getElementById('peso').value);
            const sexo = document.getElementById('sexo').value;

            const imc = peso / (altura * altura);
            let classificacao = '';

            if (sexo === 'M') {
                if (imc < 20.7) classificacao = 'Abaixo do peso';
                else if (imc >= 20.7 && imc <= 26.4) classificacao = 'No peso normal';
                else if (imc > 26.4 && imc <= 27.8) classificacao = 'Marginalmente acima do peso';
                else if (imc > 27.8 && imc <= 31.1) classificacao = 'Acima do peso ideal';
                else classificacao = 'Obeso';
            } else if (sexo === 'F') {
                if (imc < 19.1) classificacao = 'Abaixo do peso';
                else if (imc >= 19.1 && imc <= 25.8) classificacao = 'No peso normal';
                else if (imc > 25.8 && imc <= 27.3) classificacao = 'Marginalmente acima do peso';
                else if (imc > 27.3 && imc <= 32.3) classificacao = 'Acima do peso ideal';
                else classificacao = 'Obesa';
            }

            document.getElementById('resultado').innerHTML = `Seu IMC é ${imc.toFixed(2)} (${classificacao})`;
        }
    </script>
</body>
</html>
