<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parcelas</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 18px;
            margin: 20px;
        }
        form {
            display: inline-block;
            margin-bottom: 20px;
        }
        label {
            display: block;
            margin-bottom: 5px;
        }
        input, select, button {
            margin-bottom: 10px;
        }
        #resultado {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Parcelas</h1>
    <form>
        <label for="valorCompra">Valor da compra:</label>
        <input type="number" id="valorCompra" step="0.01" required>

        <label for="numParcelas">Parcelas:</label>
        <select id="numParcelas" required>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>

        <label for="valorParcela">Valor das parcelas:</label>
        <input type="text" id="valorParcela" readonly>

        <button type="button" onclick="calcularParcela()">Calcular</button>
    </form>

    <div id="resultado"></div>

    <script>
        function calcularParcela() {
            const valorCompra = parseFloat(document.getElementById('valorCompra').value);
            const numParcelas = parseInt(document.getElementById('numParcelas').value);

            let juros = 0;

            switch (numParcelas) {
                case 1:
                    juros = 0;
                    break;
                case 2:
                    juros = 3;
                    break;
                case 3:
                    juros = 3;
                    break;
                case 4:
                    juros = 7;
                    break;
                default:
                    document.getElementById('resultado').innerHTML = 'Número de parcelas inválido';
                    return;
            }

            const valorFinal = valorCompra * (1 + juros / 100);
            const valorParcela = valorFinal / numParcelas;

            document.getElementById('valorParcela').value = `R$ ${valorParcela.toFixed(2)}`;
            document.getElementById('resultado').innerHTML = 
                `Valor final com juros: R$ ${valorFinal.toFixed(2)}`;
        }
    </script>
</body>
</html>
