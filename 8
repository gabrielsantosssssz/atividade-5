<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Cálculo do Fatorial</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        input[type="text"], input[type="number"] {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            box-sizing: border-box;
        }
        button {
            padding: 10px 20px;
            margin: 5px 0;
        }
    </style>
    <script>
        function calcularFatorial() {
            const n = parseInt(document.getElementById("numero").value);
            if (n < 0) {
                alert("Por favor, insira um número inteiro positivo.");
                return;
            }
            let fatorial = 1;
            for (let i = 2; i <= n; i++) {
                fatorial *= i;
            }
            document.getElementById("resultadoFatorial").value = fatorial;
        }
    </script>
</head>
<body>

    <h1>Cálculo do Fatorial</h1>
    <label for="numero">Digite um número inteiro positivo (N):</label>
    <input type="number" id="numero" placeholder="Digite o número N">
    <button onclick="calcularFatorial()">Calcular Fatorial</button>
    <label for="resultadoFatorial">Resultado do Fatorial:</label>
    <input type="text" id="resultadoFatorial" readonly>

</body>
</html>
     

